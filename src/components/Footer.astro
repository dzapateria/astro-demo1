</footer>

<style>
  .footer {
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
    margin-top: var(--spacing-2xl);
  }
  
  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }
  
  .footer-brand {
    max-width: 400px;
  }
  
  .brand-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--accent-red);
    text-decoration: none;
    margin-bottom: var(--spacing-md);
  }
  
  .brand-icon {
    width: 36px;
    height: 36px;
  }
  
  .brand-text {
    background: linear-gradient(135deg, var(--accent-red), #ff6b6b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .footer-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--text-secondary);
    transition: all var(--transition-normal);
  }
  
  .social-link:hover {
    background: var(--accent-red);
    color: white;
    transform: translateY(-2px);
  }
  
  .social-link svg {
    width: 20px;
    height: 20px;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
  }
  
  .link-group {
    
  }
  
  .link-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
  }
  
  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .link-list li {
    margin-bottom: var(--spacing-sm);
  }
  
  .link-list a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
    font-size: 0.9rem;
  }
  
  .link-list a:hover {
    color: var(--accent-red);
  }
  
  .footer-apps {
    margin-bottom: var(--spacing-2xl);
    text-align: center;
  }
  
  .apps-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-lg);
  }
  
  .app-links {
    display: flex;
    justify-content: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
  }
  
  .app-link {
    display: block;
    transition: transform var(--transition-normal);
  }
  
  .app-link:hover {
    transform: translateY(-2px);
  }
  
  .app-link img {
    height: 50px;
    width: auto;
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }
  
  .footer-legal {
    flex: 1;
  }
  
  .legal-links {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    flex-wrap: wrap;
  }
  
  .legal-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.85rem;
    transition: color var(--transition-fast);
  }
  
  .legal-links a:hover {
    color: var(--accent-red);
  }
  
  .footer-info {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
    flex-wrap: wrap;
  }
  
  .copyright,
  .location {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin: 0;
  }
  
  .footer-features {
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--text-secondary);
    font-size: 0.85rem;
  }
  
  .feature-item svg {
    width: 16px;
    height: 16px;
    color: var(--accent-red);
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
    
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: var(--spacing-xl) 0 var(--spacing-md);
    }
    
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .legal-links {
      justify-content: center;
    }
    
    .footer-info {
      justify-content: center;
    }
    
    .footer-features {
      justify-content: center;
    }
    
    .app-links {
      flex-direction: column;
      align-items: center;
    }
  }
  
  @media (max-width: 480px) {
    .social-links {
      justify-content: center;
    }
    
    .legal-links {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
    
    .footer-info {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
    
    .footer-features {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Social links tracking
    const socialLinks = document.querySelectorAll('.social-link');
    socialLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const platform = link.getAttribute('aria-label');
        console.log(`Clicked social link: ${platform}`);
        // Here you would typically track the click or open the actual social media page
      });
    });
    
    // App download tracking
    const appLinks = document.querySelectorAll('.app-link');
    appLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const platform = link.querySelector('img')?.getAttribute('alt');
        console.log(`Clicked app download: ${platform}`);
        // Here you would typically track the download attempt
      });
    });
    
    // Footer link tracking
    const footerLinks = document.querySelectorAll('.link-list a, .legal-links a');
    footerLinks.forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const linkText = link.textContent;
        console.log(`Clicked footer link: ${linkText}`);
        // Here you would typically navigate to the actual page
      });
    });
  });
</script>